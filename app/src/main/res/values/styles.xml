<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Player names-->
    <style name="playerName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/nameSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:hint">@string/name_hint</item>
    </style>

    <!-- Number titles -->
    <style name="numberTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/explanationSize</item>
    </style>

    <!-- Total score -->
    <style name="totalScore">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/initial_score</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/bigScoreSize</item>
    </style>

    <!-- Last score -->
    <style name="lastScore">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/initial_score</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/smallScoreSize</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- The number of guesses or takings -->
    <style name="guessTakeNum">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
        <item name="android:text">@string/initial_score</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/smallScoreSize</item>
    </style>

    <!-- Plus button -->
    <style name="plusButton">
        <item name="android:layout_width">@dimen/buttonSize</item>
        <item name="android:layout_height">@dimen/buttonSize</item>
        <item name="android:padding">@dimen/buttonPadding</item>
        <item name="android:onClick">plusButtonClick</item>
        <item name="android:text">@string/plus</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
    </style>

    <!-- Minus button -->
    <style name="minusButton">
        <item name="android:layout_width">@dimen/buttonSize</item>
        <item name="android:layout_height">@dimen/buttonSize</item>
        <item name="android:padding">@dimen/buttonPadding</item>
        <item name="android:onClick">minusButtonClick</item>
        <item name="android:text">@string/minus</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
    </style>

    <!-- Action buttons -->
    <style name="actionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
    </style>
</resources>
